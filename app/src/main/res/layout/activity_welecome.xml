<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/welcomescreenbg"
            android:id="@+id/bckgrndWelcomeImg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="fitXY" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="29dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/logoWelcomeImg"
            android:scaleType="fitCenter" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/bckgrndWelcomeImg" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="GO ALL IN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h1WelcomeTxt" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="46sp"
            android:textColor="@android:color/white" android:fontFamily="@font/montserrat"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/logoWelcomeImg" android:textAlignment="center"/>
    <TextView
            android:text="ON GOING ALL OUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h2WelcomeTxt" android:fontFamily="@font/montserrat"
            android:textColor="@android:color/white" android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/h1WelcomeTxt"
            app:layout_constraintStart_toStartOf="@+id/h1WelcomeTxt"
            app:layout_constraintEnd_toEndOf="@+id/h1WelcomeTxt" android:textStyle="bold"
            android:textAlignment="center"/>
    <TextView
            android:text="Find a team in your city & domintate the league"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/h3WelcomeTxt" android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/h2WelcomeTxt"
            app:layout_constraintStart_toStartOf="@+id/h2WelcomeTxt"
            android:layout_marginTop="42dp" app:layout_constraintTop_toBottomOf="@+id/h2WelcomeTxt"
            android:fontFamily="@font/montserrat" android:textSize="16sp" android:textAlignment="center"
            android:singleLine="false"/>
    <Button
            android:text="GET STARTED"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/startWelcomeBtn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/bckgrndWelcomeImg" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:fontFamily="@font/montserrat" android:textSize="18sp"
            android:textColor="@android:color/white" android:background="@drawable/swoosh_button"/>

</android.support.constraint.ConstraintLayout>